import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.Scanner;
import java.util.ArrayList;
import java.util.Random;

public class newfile {
    public static void main(String[] args) {
        String filepath = "Words";
        ArrayList<String> words = new ArrayList<>();
        try(BufferedReader reader = new BufferedReader(new FileReader(filepath))){
            String line;
            while((line = reader.readLine()) != null ){
                words.add(line.trim());
            }


        }
        catch(FileNotFoundException e){
            System.out.println("Could not find file ");

        }
        catch (IOException e) {
            System.out.println("Something went wrong ");;
        }

        Random random = new Random();


        String word = words.get(random.nextInt(words.size()));
        Scanner scanner = new Scanner(System.in);
        ArrayList<Character> wordState = new ArrayList<>();
        ArrayList<Integer> nums = new ArrayList<>();

        int wrongGuess = 0;
        int score = 6;
        boolean hintUsed = false;

        for (int i = 0; i < word.length(); i++) {
            wordState.add('_');
        }

        System.out.println("********************************");
        System.out.println("ðŸŽ‰ Welcome to Hangman Art Game! ");
        System.out.println("********************************");

        while (wrongGuess < 6) {
            System.out.print("ðŸ§© Word: ");
            for (char c : wordState) {
                System.out.print(c + " ");
            }
            System.out.println();

            System.out.print("ðŸ”¤ Guess a letter ( or type "hint" to get a 1 letter hint ) : ");
            String input = scanner.next().toLowerCase();

            if (input.equals("hint")) {
                if(!hintUsed){
                    for(int i = 0 ;i <wordState.size();i++ ){
                        if(wordState.get(i) == '_' ){
                            nums.add(i);


                        }
                    }


                }
                int randindex = nums.get(random.nextInt(nums.size()));
                char letterToReveal = word.charAt(randindex);
                wordState.set(randindex, letterToReveal);

                continue;
            }

            char guess = input.charAt(0);



            if (word.indexOf(guess) >= 0) {
                System.out.println("âœ… Correct GUESS! ");
                for (int i = 0; i < word.length(); i++) {
                    if (word.charAt(i) == guess) {
                        wordState.set(i, guess);
                    }
                }

                if (!wordState.contains('_')) {
                    System.out.println("ðŸ† YOU WON!! ðŸŽ‰");
                    System.out.println("ðŸ“˜ The word was: " + word);
                    System.out.println("ðŸ§® Your score: " + score + " / 6 âœ…");
                    break;
                }
            } else {
                System.out.println("âŒ Wrong guess! ðŸ˜“");
                wrongGuess++;
                score--;
                System.out.print(getHangmanArt(wrongGuess));
                System.out.println("ðŸ“‰ Current score: " + score + " / 6");
            }
        }

        if (wrongGuess >= 6) {
            System.out.println("ðŸ’€ YOU LOST THE GAME! ðŸ˜­");
            System.out.println("ðŸ›‘ GAME OVER!");
            System.out.println("ðŸ“• The word was: " + word);
            System.out.println("ðŸ§® Your score: " + score + " / 6 âŒ ðŸ¤£");
        }

        scanner.close();


    }

    static String getHangmanArt(int wrongGuess) {
        return switch (wrongGuess) {
            case 0 -> """
                      
                      
                      
                      """;
            case 1 -> """
                       ðŸ˜
                      
                      
                      """;
            case 2 -> """
                       ðŸ˜
                      /
                      
                      """;
            case 3 -> """
                       ðŸ˜
                      /|
                      
                      """;
            case 4 -> """
                       ðŸ˜
                      /|\\
                      
                      """;
            case 5 -> """
                       ðŸ˜
                      /|\\
                      /
                      """;
            case 6 -> """
                       ðŸ˜µ
                      /|\\
                      / \\
                      """;
            default -> "";
        };
    }
}
