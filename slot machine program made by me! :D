import java.util.Scanner;
import java.util.Arrays;
import java.util.Random;
public class newfile {
    public static void main(String[] args) {

        // SLOT MACHINE GAME

        Scanner scanner = new Scanner(System.in);
        // DECLARE VARIABLES
        int balance = 100;
        int bet;
        int payout;
        String[] row;
        String playAgain;


        // DISPLAY WELCOME MESSAGE

        System.out.println("**************************************");
        System.out.println("    Welcome to java slot machine ğŸ˜ğŸ˜");
        System.out.println("       Symbols: ğŸ• ğŸ‰ ğŸ­ ğŸˆ ğŸ‘‘      ");
        System.out.println("**************************************");

        // PLAY IF BALANCE > 0

        while(balance >0) {
            System.out.println("Current balance: $" + balance);


            // ENTER BET AMOUNT

            System.out.print("Enter amount to bet amount ğŸ’°ğŸ’°:");
            bet = scanner.nextInt();
            scanner.nextLine();

            //VERIFY IF BET > BALANCE

            if (bet > balance) {
                System.out.println("Insufficient funds!! ğŸ˜” ");
                continue;
            }

            //      VERIFY IF BET > 0

            else if (bet < 0) {
                System.out.print("Bet amount must be greater than 0! ğŸ’¢");
            }

            //      SUBTRACTING BET FROM BALANCE

            else{
                balance -= bet;

            }

            System.out.println("Spinning.... ");
            row = spinRow();
            printRow(row);
            payout = getPayOut(row,bet );
            if (payout > 0){
                System.out.println("YOU WON !! ğŸ¤‘ğŸ¤‘ğŸ’°  $" + payout);
                balance +=payout;
            }
            else{
                System.out.println("YOU LOST !! ğŸ¤£ğŸ¤£ğŸ¤£");
            }
            System.out.print("Do you want to play again ğŸ˜ (Y/N) ? : ");
            playAgain = scanner.next().toUpperCase();

            if(!playAgain.equals("Y")){
                System.out.println("Thanks for playing the slot machine game! hope you enjoyed!! ");
                System.out.print("Your balance is... $ " + balance );
                break;
            }





            // DISPLAY EXIT MESSAGE
            scanner.close();

        }

    }

    // SPIN ROW

    static String[] spinRow(){
        Random random = new Random();
        String[] symbols ={"ğŸ•" ,"ğŸ‰", "ğŸ­", "ğŸˆ" ,"ğŸ‘‘"};
        String[] row = new String[3];
        for(int i=0;i < 3;i++ ){
            row[i] = symbols[random.nextInt(symbols.length)];
        }
        return row;

    }

    // PRINT ROW

    static void printRow(String[] row){
        System.out.println("**************");
        System.out.println(" " +String.join(" | ",row) );
        System.out.println("**************");

    }

    // GET PAYOUT

    static int getPayOut(String[] row, int bet){
        if(row[0].equals(row[1]) && row[1].equals(row[2]) ){
            return switch(row[0]){
                // "ğŸ•" ,"ğŸ‰", "ğŸ­", "ğŸˆ" ,"ğŸ‘‘"
                case "ğŸ•" -> bet*=2;
                case "ğŸ‰" -> bet*=3;
                case "ğŸ­" -> bet*=5;
                case "ğŸˆ" -> bet*=10;
                case "ğŸ‘‘" -> bet*=20;
                default -> 0;
            };


        }
        else if(row[0].equals(row[1]) ) {
            return switch (row[0]) {
                // "ğŸ•" ,"ğŸ‰", "ğŸ­", "ğŸˆ" ,"ğŸ‘‘"
                case "ğŸ•" -> bet *= 1.5;
                case "ğŸ‰" -> bet *= 2;
                case "ğŸ­" -> bet *= 3;
                case "ğŸˆ" -> bet *= 8;
                case "ğŸ‘‘" -> bet *= 11;
                default -> 0;
            };
        }
        else if(row[1].equals(row[2]) ) {
            return switch (row[1]) {
                // "ğŸ•" ,"ğŸ‰", "ğŸ­", "ğŸˆ" ,"ğŸ‘‘"
                case "ğŸ•" -> bet *= 2;
                case "ğŸ‰" -> bet *= 3;
                case "ğŸ­" -> bet *= 4;
                case "ğŸˆ" -> bet *= 8;
                case "ğŸ‘‘" -> bet *= 11;
                default -> 0;
            };
        }


        return bet;
    }



}
